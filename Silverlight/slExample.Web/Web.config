<configuration>
    <system.web>
      <pages enableViewState="false" enableViewStateMac="false"></pages>
        <compilation debug="true" targetFramework="4.0" />
      <globalization requestEncoding="utf-8" responseEncoding="utf-8"  />      
    </system.web>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior name="">
          <serviceMetadata httpGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true" />
    <bindings>
      <basicHttpBinding>
        <binding name="DBHelperProxyBinding" closeTimeout="00:01:00"
          openTimeout="00:01:00" receiveTimeout="00:10:00" sendTimeout="00:01:00"
          allowCookies="false" bypassProxyOnLocal="false" hostNameComparisonMode="StrongWildcard"
          maxBufferSize="200000000" maxBufferPoolSize="5242880" maxReceivedMessageSize="200000000"
          messageEncoding="Text" textEncoding="utf-8" transferMode="Buffered"
          useDefaultWebProxy="true">
          <readerQuotas maxDepth="32" maxStringContentLength="200000000"
            maxArrayLength="65535" maxBytesPerRead="65535" maxNameTableCharCount="65535" />
          <security mode="None">
            <transport clientCredentialType="None" proxyCredentialType="None"
              realm="" />
            <message clientCredentialType="UserName" algorithmSuite="Default" />
          </security>
        </binding>
        <binding name="BasicHttpBinding_IDBHelper" closeTimeout="00:01:00"
          openTimeout="00:01:00" receiveTimeout="00:10:00" sendTimeout="00:01:00"
          allowCookies="false" bypassProxyOnLocal="false" hostNameComparisonMode="StrongWildcard"
          maxBufferSize="65536" maxBufferPoolSize="524288" maxReceivedMessageSize="65536"
          messageEncoding="Text" textEncoding="utf-8" transferMode="Buffered"
          useDefaultWebProxy="true">
          <readerQuotas maxDepth="32" maxStringContentLength="8192" maxArrayLength="16384"
            maxBytesPerRead="4096" maxNameTableCharCount="16384" />
          <security mode="None">
            <transport clientCredentialType="None" proxyCredentialType="None"
              realm="" />
            <message clientCredentialType="UserName" algorithmSuite="Default" />
          </security>
        </binding>
      </basicHttpBinding>
    </bindings>
    <client>
      <endpoint address="http://oap.ied.com/DBProxy/DBProxy.svc" binding="basicHttpBinding"
        bindingConfiguration="DBHelperProxyBinding" contract="DoNet.Common.DbUtility.Proxy.IDBHelper"
        name="DBProxy" />
      <endpoint address="http://oap.ied.com/dbproxy/DBProxy.svc" binding="basicHttpBinding"
        bindingConfiguration="BasicHttpBinding_IDBHelper" contract="ServiceReference1.IDBHelper"
        name="BasicHttpBinding_IDBHelper" />
    </client>
  </system.serviceModel>
</configuration>
